<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daijiale.wear.partyshaking"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-feature android:name="android.hardware.type.watch" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault" >

        <activity
            android:name="com.daijiale.wear.partyshaking.ActivityToActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.daijiale.wear.partyshaking.FirstActivity"
            android:label="@string/app_name" >
        </activity>


        <activity
            android:name="com.daijiale.wear.partyshaking.SecondActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
